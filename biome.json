{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "ignore": ["node_modules"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": false,
            "a11y": {
                "recommended": true
            },
            "complexity": {
                "recommended": true
            },
            "correctness": {
                "recommended": true,
                "useExhaustiveDependencies": "off",
                "useJsxKeyInIterable": "off"
            },
            "security": {
                "recommended": true
            },
            "style": {
                "recommended": true,
                "noDefaultExport": "off",
                "noNegationElse": "off"
            },
            "suspicious": {
                "recommended": true,
                "useAwait": "warn"
            }
        },
        "ignore": ["*test*", "**/*.js", "**/*.json", "node_modules", "assets/**"]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "trailingCommas": "all",
            "semicolons": "asNeeded",
            "arrowParentheses": "always",
            "bracketSpacing": true,
            "bracketSameLine": false
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    }
}
